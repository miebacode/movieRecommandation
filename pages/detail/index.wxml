
  <scroll-view style="min-height : {{screen.minHeight}};background-color: #2f2f2f;">
    <view class="banner">
      <view class="poster">
        <image mode="aspectFit" src="{{pic_url}}"></image>
      </view>
    
      <view class="info">
        <view class="title">{{title}}</view>
        <view class="subinfo">
        <view>类型：{{type}}</view>
        <view>导演：{{diretors}}</view>
        <view>主演：{{stars}}</view>
        <view>制片国家：{{country}}</view>
        <view>片长：{{running_time}}</view>
        <view>上映时间：{{release_date}}</view>
        <view class="score">{{douban_score}}<view>分</view><view>{{douban_votes}}人评分</view></view>
        </view>
        
      </view>
      <image class="background" mode="aspectFill" src="{{pic_url}}"></image>
    </view>
  
    
      <view class="summary">
      <view class="title">电影简介：</view>
      {{short_intro}}
    </view>

      <view class="assess">
      <view class="title">评价:</view>
    <view  wx:for="{{assess}}" wx:for-index="myIndex" wx:for-item="myItem">
    <view class="username">{{myItem.name}}</view>
    <view class="content">{{myItem.content}}</view>
    </view>
      </view>

    </scroll-view>

    
    
